// SimpleLang Test File 1 - Basic Declarations and Arithmetic
// Tests: Variable declarations, constants, arithmetic operations

// Integer declarations
rakam x = 10;
rakam y = 20;
rakam z;

// Float declarations
kasr pi = 3.14159;
kasr radius = 5.0;

// String declaration
kalam greeting = "Marhaba, World!";

// Boolean declaration
mantiq is_valid = sa7;

// Constant declaration
sabit rakam MAX_VALUE = 100;

// Arithmetic operations
z = x + y;
etba3 z;

rakam product = x * y;
etba3 product;

kasr area = pi * radius * radius;
etba3 area;

// Compound assignments
x += 5;
y -= 3;
etba3 x;
etba3 y;

// Print statements
etba3 greeting;
etba3 "Test completed!";
